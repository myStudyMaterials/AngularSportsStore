

<div class="col-xs-8">

    <div class="well" ng-repeat="item in data.products | filter:categoryFilterFunction |range:selectedPage:pageSize">
        <h3>
            <strong>{{item.ProductName}}</strong>
            <span class="pull-right label label-primary">{{item.Price | currency}}</span>
        </h3>
        <span class="lead">{{item.Description}}</span>
    </div>
    <div class="pull-right btn-group">
        <a ng-repeat="page in data.products | filter:categoryFilterFunction |pageCount:pageSize" ng-click="selectPage($index + 1)" class="btn btn-default"
           ng-class="getPageClass($index + 1)">
            {{$index + 1}}
        </a>
    </div>
</div>

