@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="sportsStore">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />

</head>
<body ng-controller="sportsStoreController">
    <div class="navbar navbar-inverse">
        <a class="navbar-brand" href="#">SPORTS STORE</a>
    </div>
    <div class="panel panel-default row" ng-controller="productListControllers">
        <div class="col-xs-3">
            <a ng-click="selectCategory()" class="btn btn-block btn-default btn-lg">Home</a>
            <a ng-repeat="item in data.products |orderBy:'CategoryName' | unique:'CategoryName'"
               ng-click="selectCategory(item)" class="btn btn-block btn-default btn-lg" ng-class="getCategoryClass(item)">{{item}}</a>
        </div>
        <div class="col-xs-8">
            <div class="well" ng-repeat="item in data.products | filter:categoryFilterFunction |range:selectedPage:pageSize">
                <h3>
                    <strong>{{item.ProductName}}</strong>
                    <span class="pull-right label label-primary">{{item.Price | currency}}</span>
                </h3>
                <span class="lead">{{item.Description}}</span>
            </div>
            <div class="pull-right btn-group">
                <a ng-repeat="page in data.products | filter:categoryFilterFunction |pageCount:pageSize" ng-click="selectPage($index + 1)" class="btn btn-default"
                   ng-class="getPageClass($index + 1)">
                    {{$index + 1}}
                </a>
            </div>
        </div>
    </div>

    <script src="~/Scripts/libs/angular.min.js"></script>
    <script src="~/Scripts/libs/angular-route.min.js"></script>
    <script src="~/Scripts/externalScripts/modules/sportsStoreModule.js"></script>
    <script src="~/Scripts/externalScripts/controllers/sportsStore.js"></script>
    <script src="~/Scripts/externalScripts/services/productServices.js"></script>
    <script src="~/Scripts/externalScripts/filters/customFilters.js"></script>
    <script src="~/Scripts/externalScripts/controllers/productListControllers.js"></script>


</body>
</html>
